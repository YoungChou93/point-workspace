	</sql>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from ServiceItemDepartmentMap
		where ID = #{id,jdbcType=INTEGER}
	</select>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from ServiceItemDepartmentMap
		where ID = #{id,jdbcType=INTEGER}
	</delete>
	
	<delete id="deleteByServiceItemIDAndDeptID" parameterType="Map">
		delete from ServiceItemDepartmentMap
		where (ServiceItemID = #{serviceitemid,jdbcType=CHAR}) and (DeptID = #{deptid,jdbcType=CHAR})
	</delete>

	<delete id="deleteByServiceItemID" parameterType="java.lang.String">
		delete from ServiceItemDepartmentMap
		where ServiceItemID = #{serviceitemid,jdbcType=CHAR}
	</delete>

	<insert id="insertSelective" parameterType="com.his.entity.baseinfo.ServiceItemDepartmentMap">
		insert into ServiceItemDepartmentMap
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				ID,
			</if>
			<if test="serviceitem != null">
				ServiceItemID,
			</if>
			<if test="department != null">
				DeptID,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="serviceitem != null">
				#{serviceitem.serviceitemid,jdbcType=CHAR},
			</if>
			<if test="department != null">
				#{department.deptid,jdbcType=CHAR},
			</if>
		</trim>
	</insert>

	<select id="findServiceItemDepartmentMap" parameterType="Map"
		resultMap="BaseResultMap">
		select * from ServiceItemDepartmentMap
		<where>
			<if test="serviceitemid!=null and serviceitemid!=''">
				and ServiceItemID=#{serviceitemid}
			</if>
			<if test="deptid!=null and deptid!=''">
				and DeptID=#{deptid}
			</if>
		</where>
		<if test="start!=null and size!=null">
			order by ID offset ${start} rows fetch next ${size} rows
			only
		</if>
	</select>
	
	<select id="getTotalServiceItemDepartmentMap" parameterType="Map" resultType="Long">
		select count(*) from ServiceItemDepartmentMap
		<where>
			<if test="serviceitemid!=null and serviceitemid!=''">
				and ServiceItemID=#{serviceitemid}
			</if>
			<if test="deptid!=null and deptid!=''">
				and DeptID=#{deptid}
			</if>
		</where>
	</select>
	
	<select id="loadDeptID" parameterType="java.lang.String" resultType="String">
		select DeptID from ServiceItemDepartmentMap
		where ServiceItemID = #{serviceitemid,jdbcType=CHAR}
	</select>
