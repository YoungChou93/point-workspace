<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.his.dao.baseinfo.DeptEmpMapDao">
	<resultMap id="BaseResultMap" type="com.his.entity.baseinfo.DeptEmpMap">
		<id column="ID" jdbcType="INTEGER" property="id" />
		<association property="department" column="DeptID"
			select="com.his.dao.baseinfo.DepartmentDao.selectPartByPrimaryKey"></association>
		<association property="employee" column="EmpID"
			select="com.his.dao.baseinfo.EmployeeDao.selectPartByPrimaryKey"></association>
	</resultMap>

	<sql id="Base_Column_List">
		ID, DeptID, EmpID
	</sql>

	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from DeptEmpMap
		where ID = #{id,jdbcType=INTEGER}
	</select>

	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from DeptEmpMap
		where ID = #{id,jdbcType=INTEGER}
	</delete>

	<delete id="deleteByDeptIDAndEmpID" parameterType="Map">
		delete from
		DeptEmpMap
		where (DeptID = #{deptid,jdbcType=CHAR}) and
		(EmpID = #{empid,jdbcType=CHAR})
	</delete>

	<delete id="deleteByEmpID" parameterType="java.lang.String">
		delete from
		DeptEmpMap
		where EmpID = #{empid,jdbcType=CHAR}
	</delete>
	
	<delete id="deleteByDeptID" parameterType="java.lang.String">
		delete from
		DeptEmpMap
		where DeptID = #{deptid,jdbcType=CHAR}
	</delete>

	<insert id="insertSelective" parameterType="com.his.entity.baseinfo.DeptEmpMap">
		insert into DeptEmpMap
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				ID,
			</if>
			<if test="department != null">
				DeptID,
			</if>
			<if test="employee != null">
				EmpID,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="department != null">
				#{department.deptid,jdbcType=CHAR},
			</if>
			<if test="employee != null">
				#{employee.empid,jdbcType=CHAR},
			</if>
		</trim>
	</insert>



	<select id="findDeptEmpMap" parameterType="Map"
		resultMap="BaseResultMap">
		select * from DeptEmpMap
		<where>
			<if test="deptid!=null and deptid!=''">
				and DeptID=#{deptid}
			</if>
			<if test="empid!=null and empid!=''">
				and EmpID=#{empid}
			</if>
		</where>
		<if test="start!=null and size!=null">
			order by ID offset ${start} rows fetch next ${size} rows
			only
		</if>
	</select>

	<select id="getTotalDeptEmpMap" parameterType="Map"
		resultType="Long">
		select count(*) from DeptEmpMap
		<where>
			<if test="deptid!=null and deptid!=''">
				and DeptID=#{deptid}
			</if>
			<if test="empid!=null and empid!=''">
				and EmpID=#{empid}
			</if>
		</where>
	</select>
</mapper>