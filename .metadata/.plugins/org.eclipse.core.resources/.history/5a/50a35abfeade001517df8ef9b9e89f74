	<select id="findBillRec" parameterType="Map" resultMap="BaseResultMap">
		select * <!--BillCode , ExecuteDept, ExecuteEmp --> from BillRec
		<where>
			<if test="prefix !=null and prefix !=''">
				and BillCode like #{prefix}
			</if>
			<!-- BillTime >= enddate  后减前-->
			<if test="begindate !=null and begindate !=''">
				and DATEDIFF(day,BillTime, #{begindate}) <![CDATA[ <= ]]> 0
			</if>
			<!-- BillTime <= enddate -->
			<if test="enddate !=null and enddate !=''">
				and DATEDIFF(day,BillTime, #{enddate}) <![CDATA[ >= ]]> 0
			</if>
			<if test="empid !=null and empid !=''">
				and ExecuteEmp = #{empid}
			</if>
		</where>
		<!-- group by BillCode, ExecuteDept, ExecuteEmp -->
		<if test="start!=null and size!=null">
			order by BillCode offset ${start} rows fetch next ${size} rows only
		</if>
	</select>

