	<select id="findTotalExpense" parameterType="Map" resultMap="BaseResultMap">
		select * from TotalExpense
		<where>
			<if test="serialid !=null and serialid !=''">
				and SerialID = #{serialid}
			</if>
			<if test="markid !=null and markid !=''">
				and MarkID = #{markid}
			</if>
			<if test="iccardid !=null and iccardid !=''">
				and ICCardID = #{iccardid}
			</if>
			<if test="patientid !=null and patientid !=''">
				and PatientID = #{patientid}
			</if>
			<!-- 根据挂号科室进行查询 -->
			<if test="deptid !=null and deptid !=''">
				and MarkID in (select MarkID from BOutpatientMark where ExecuteDeptID = #{deptid})
			</if>
			<if test="baltype !=null">
				and BalType = ${baltype}
			</if>
		</where>
		<if test="start!=null and size!=null">
			order by SerialID offset ${start} rows fetch next
			${size}
			rows only
		</if>
	</select>

	<select id="getTotalTotalExpense" parameterType="Map"
		resultType="Long">
		select count(*) from TotalExpense
		<where>
			<if test="serialid !=null and serialid !=''">
				and SerialID = #{serialid}
			</if>
			<if test="markid !=null and markid !=''">
				and MarkID = #{markid}
			</if>
			<if test="iccardid !=null and iccardid !=''">
				and ICCardID = #{iccardid}
			</if>
			<if test="patientid !=null and patientid !=''">
				and PatientID = #{patientid}
			</if>
		</where>
	</select>

	<select id="getMaxID" parameterType="Map" resultType="String">
		select MAX(SerialID) from TotalExpense
		<where>
			<if test="prefix!=null and prefix!='' ">
				and SerialID like #{prefix}
			</if>
		</where>
	</select>
