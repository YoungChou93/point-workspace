  <select id="findShopInfo" parameterType="Map" resultMap="BaseResultMap">
		select * from ShopInfo
		<where>
			<if test="shopid !=null and shopid !=''">
				and ShopID like #{shopid}
			</if>
			<if test="filter !=null and filter !=''">
				and ( PyCode like #{filter} OR WbCode like #{filter} OR
				SelfDefCode like #{filter} OR ShopName like #{filter} )
			</if>
			
				and BeState != -1 
		</where>
		<if test="start!=null and size!=null">
			order by ShopID DESC offset ${start} rows fetch next ${size} rows only
		</if>
	</select>

	<select id="getTotalShopInfo" parameterType="Map"
		resultType="Long">
		select count(*) from ShopInfo
		<where>
			<if test="shopid !=null and shopid !=''">
				and ShopID like #{shopid}
			</if>
			<if test="filter !=null and filter !=''">
				and ( PyCode like #{filter} OR WbCode like #{filter} OR
				SelfDefCode like #{filter} OR ShopName like #{filter} )
			</if>
			
			and BeState != -1 
			
		</where>
	</select>
	
	<select id="getMaxShopInfoID" resultType="String">
